<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10dp"
    android:background="#CBD0D5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_status_barang"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Belum Sampai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_barrier_03"
        android:layout_below="@+id/tv_status_barang"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_picture_prev"
        android:layout_below="@+id/view_barrier_03"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_0001"
        android:layout_below="@+id/view_barrier_03"
        android:layout_toEndOf="@+id/iv_picture_prev"
        android:text="Barang Atas Nama : "
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_costumer_recycler"
        android:layout_below="@+id/tv_0001"
        android:layout_toEndOf="@+id/iv_picture_prev"
        android:text="Arnmen Satria"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_barrier_013"
        android:layout_below="@+id/iv_picture_prev"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_status_package_recycler"
        android:layout_below="@+id/view_barrier_013"
        android:text="Paket Sedang Dikirm Oleh Kurir"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>