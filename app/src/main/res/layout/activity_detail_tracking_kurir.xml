<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.courier.barang.detail.DetailTrackingKurirActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout01"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black" />

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/appBarLayout01"
      android:padding="16dp">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Kode Pelanggan"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_code_costumer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="18sp"
          tools:text="2132732132" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Nama Penerima"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_name_costumer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="18sp"
          tools:text="Aru" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Nomor HP"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_number_phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="18sp"
          tools:text="08645912347" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_04"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Alamat "
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_address_costumer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="18sp"
          tools:text="Jl. Kartama Pribadi No 110 " />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_08"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Status Barang"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_status_package"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="18sp"
          tools:text="Barang Sudah Sampai" />

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/tv_09"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:text="Foto Barang Sudah Diterima"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/iv_image_deliver"
          android:layout_marginBottom="10dp"
          android:layout_gravity="center"
          android:layout_width="310dp"
          android:layout_height="250dp"/>


    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
  </androidx.core.widget.NestedScrollView>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>