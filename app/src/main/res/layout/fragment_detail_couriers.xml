<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.couriers.detail.DetailCouriersFragment">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout01"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Toolbar.Primary" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_below="@+id/appBarLayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_08"
                    android:text="Profil Kurir"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/rellay_02"
                    android:layout_below="@+id/tv_08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_courier_photo"
                        android:src="@drawable/no_profile_images"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="180dp"
                        android:layout_height="180dp"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_toEndOf="@+id/iv_courier_photo"
                        android:layout_marginStart="-60dp"
                        android:layout_marginTop="-55dp"
                        android:src="@drawable/ic_baseline_photo_camera_24"
                        android:layout_below="@+id/iv_courier_photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til001"
                    android:layout_below="@+id/rellay_02"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nama_lengkap_kurir"
                        android:drawableEnd="@drawable/ic_baseline_edit_24"
                        android:hint="Nama Lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til002"
                    android:layout_below="@+id/til001"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:hint="Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til003"
                    android:layout_below="@+id/til002"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_alamat_lengkap_kurir"
                        android:drawableEnd="@drawable/ic_baseline_edit_24"
                        android:hint="Alamat Lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </ScrollView>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</FrameLayout>