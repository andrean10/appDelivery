<androidx.cardview.widget.CardView
    android:id="@+id/cardview01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:padding="16dp"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/relative_layout_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6B900">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_0001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_barrier_03"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_picture_prev"
            tools:text="Barang Atas Nama : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_costumer_recycler"
            android:layout_below="@+id/tv_0001"
            android:layout_toEndOf="@+id/iv_picture_prev"
            tools:text="Arnmen Satria"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_loation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tv_0001"
            android:layout_toStartOf="@+id/location"
            android:src="@drawable/ic_baseline_location_on_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/location"
            android:layout_marginEnd="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_0001"
            tools:text="600 m"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_barrier_001"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_name_costumer_recycler"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_status_barang_01"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            tools:text="Barang Masih Diperjalanan"
            android:layout_below="@+id/view_barrier_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>



</androidx.cardview.widget.CardView>