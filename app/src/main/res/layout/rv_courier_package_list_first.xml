<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:padding="16dp"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E6EC">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_picture_prev"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_0001"
            android:layout_below="@+id/view_barrier_03"
            android:layout_toEndOf="@+id/iv_picture_prev"
            android:text="Barang Atas Nama : "
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_costumer_recycler"
            android:layout_below="@+id/tv_0001"
            android:layout_toEndOf="@+id/iv_picture_prev"
            android:text="Arnmen Satria"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/location"
            android:layout_marginEnd="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_0001"
            android:text="600 m"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>



</androidx.cardview.widget.CardView>